@page
@model App.Areas.Admin.Pages.DeleteUserModel
@{ ViewData["Title"] = "Delete Link"; }

<p><a class="btn btn-sm btn-light btn-back-arrow" asp-page="./Index">Back</a></p>

<div class="p-2">
    <h5>Are you sure you want to delete this user?</h5>
    
    <p class="h6">@Model.AppUser.Name</p>

    <div class="pt-4">
        <form method="post">
            <input type="hidden" asp-for="AppUser.Id" />
            <input type="submit" value="Yes, delete it." class="btn btn-danger" />
        </form>
    </div>
</div>

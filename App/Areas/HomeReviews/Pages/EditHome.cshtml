
@page
@model App.Areas.Homes.Pages.EditHomeModel
@{ ViewData["Title"] = "Updating Home Details"; }

<p><a class="btn btn-sm btn-light btn-back-arrow" asp-page="./HomeDetails" asp-route-id="@Model.Input.Id">Back</a></p>

<div class="p-2">
    <h4>Updating address for:</h4>
    <h3>@Model.Record.Address</h3>
    <div class="row mt-4 mb-4">
        <div class="col-md-4">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input asp-for="Input.Id" />
                <div class="form-group form-check-inline">
                    <input asp-for="Input.Available" class="form-control form-check-input" />
                    <label asp-for="Input.Available" class="control-label form-check-label"></label>
                    <span asp-validation-for="Input.Available" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.HouseNumber" class="control-label"></label>
                    <input asp-for="Input.HouseNumber" class="form-control" />
                    <span asp-validation-for="Input.HouseNumber" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.StreetName" class="control-label"></label>
                    <input asp-for="Input.StreetName" class="form-control" />
                    <span asp-validation-for="Input.StreetName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.City" class="control-label"></label>
                    <input asp-for="Input.City" class="form-control" />
                    <span asp-validation-for="Input.City" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.State" class="control-label"></label>
                    <select asp-for="Input.State" asp-items="@Utilities.StateSelector.Items" class="form-control"></select>
                    <span asp-validation-for="Input.State" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.Zip" class="control-label"></label>
                    <input asp-for="Input.Zip" class="form-control" />
                    <span asp-validation-for="Input.Zip" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.Bedrooms" class="control-label"></label>
                    <input asp-for="Input.Bedrooms" class="form-control" />
                    <span asp-validation-for="Input.Bedrooms" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.Bathrooms" class="control-label"></label>
                    <input asp-for="Input.Bathrooms" class="form-control" />
                    <span asp-validation-for="Input.Bathrooms" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.Space" class="control-label"></label>
                    <input asp-for="Input.Space" class="form-control" />
                    <span asp-validation-for="Input.Space" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.Cost" class="control-label"></label>
                    <input asp-for="Input.Cost" class="form-control" />
                    <span asp-validation-for="Input.Cost" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <button class="btn btn-primary">Save</button>
                    <a class="btn btn-danger" asp-page="./DeleteHome" asp-route-id="@Model.Input.Id">Delete</a>
                </div>
            </form>
        </div>
    </div>
    <p class="mb-0"><small class="text-muted">Added <passed-time time="@Model.Record.Created" /> by @Model.Record.CreatedBy.FirstName</small></p>
    <p class="mb-0"><small class="text-muted">Last edited <passed-time time="@Model.Record.Modified" /> by @Model.Record.ModifiedBy.FirstName</small></p>
</div>

@section Scripts {
    <partial name="Shared/_ValidationScriptsPartial" />
}
@page
@model App.Areas.Homes.Pages.EditPreferenceLevelModel
@{ ViewData["Title"] = "Edit Preference Level"; }

<p><a class="btn btn-sm btn-light btn-back-arrow" asp-page="./EditPreference" asp-route-id="@Model.Input.PreferenceId">Back</a></p>

<div class="p-2">
    <form method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group pt-4">
            <label asp-for="Input.Title" class="control-label h4"></label>
            <input asp-for="Input.Title" class="form-control" />
            <span asp-validation-for="Input.Title" class="text-danger"></span>
        </div>
        <div class="form-group pt-4">
            <button class="btn btn-primary">Save Changes</button>
            <a class="btn btn-danger" asp-page="./DeletePreferenceLevel" asp-route-id="@Model.Input.Id">Delete</a>
        </div>
        <input type="hidden" asp-for="Input.Id" />
        <input type="hidden" asp-for="Input.PreferenceId" />
    </form>
</div>

@page
@model App.Areas.Homes.Pages.Features.CreateFeatureLevelModel
@{ ViewData["Title"] = "Add a Feature Level"; }

<p><a class="btn btn-sm btn-light btn-back-arrow" asp-page="./EditFeature" asp-route-id="@Model.Feature.Id">Back</a></p>

<div class="p-2">
    <h4>Adding a new feature level to "@Model.Feature.Title"</h4>
    <form method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="row pt-4">
            <div class="form-group col-4">
                <label asp-for="Input.Title" class="control-label"></label>
                <input asp-for="Input.Title" class="form-control" />
                <span asp-validation-for="Input.Title" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <button class="btn btn-primary">Save Feature Level</button>
        </div>
        <input type="hidden" asp-for="Feature.Id" />
    </form>
</div>

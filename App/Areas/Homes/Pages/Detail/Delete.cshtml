@page
@model App.Areas.Homes.Pages.Detail.DeleteModel
@{ ViewData["Title"] = "Delete Link"; }

<p><a class="btn btn-sm btn-light btn-outline-secondary btn-back-arrow" asp-area="Homes" asp-page="./Index">Back to List</a></p>

<div class="p-2">
    <h5>Are you sure you want to delete this link?</h5>
    
    <p class="h6">@Model.Link.Link</p>

    <div class="pt-4">
        <form method="post">
            <input type="hidden" asp-for="Link.HomeId" />
            <input type="hidden" asp-for="Link.Id" />
            <input type="submit" value="Yes, delete it." class="btn btn-danger" />
        </form>
    </div>
</div>

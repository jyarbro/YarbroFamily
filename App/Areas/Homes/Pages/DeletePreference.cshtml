@page
@model App.Areas.Homes.Pages.DeletePreferenceModel
@{ ViewData["Title"] = "Delete Preference"; }

<p><a class="btn btn-sm btn-light btn-back-arrow" asp-page="./Preferences">Back</a></p>

<div class="p-2">
    <h5>Are you sure you want to delete this preference?</h5>
    
    <p class="h6">@Model.Title</p>

    <div class="pt-4">
        <form method="post">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Yes, delete it." class="btn btn-danger" />
        </form>
    </div>
</div>

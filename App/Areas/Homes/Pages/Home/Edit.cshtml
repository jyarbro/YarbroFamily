@page
@model App.Areas.Homes.Pages.Home.EditModel

<h4>Home</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Home.Id" />
            <div class="form-group">
                <label asp-for="Home.Title" class="control-label"></label>
                <input asp-for="Home.Title" class="form-control" />
                <span asp-validation-for="Home.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Home.Description" class="control-label"></label>
                <input asp-for="Home.Description" class="form-control" />
                <span asp-validation-for="Home.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Home.Created" class="control-label"></label>
                <input asp-for="Home.Created" class="form-control" />
                <span asp-validation-for="Home.Created" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Home.Modified" class="control-label"></label>
                <input asp-for="Home.Modified" class="form-control" />
                <span asp-validation-for="Home.Modified" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Home.CreatedById" class="control-label"></label>
                <select asp-for="Home.CreatedById" class="form-control" asp-items="ViewBag.CreatedById"></select>
                <span asp-validation-for="Home.CreatedById" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Home.ModifiedById" class="control-label"></label>
                <select asp-for="Home.ModifiedById" class="form-control" asp-items="ViewBag.ModifiedById"></select>
                <span asp-validation-for="Home.ModifiedById" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@model App.Areas.Homes.Pages.Home.DeleteModel
@{ ViewData["Title"] = "Delete Home"; }

<p><a class="btn btn-sm btn-light btn-outline-secondary btn-back-arrow" asp-page="./Index">Back to List</a></p>

<div class="p-2">
    <h4>Are you sure you want to delete this home?</h4>
    <h3>@Model.Home.Address</h3>

    <div class="pt-4">
        <form method="post">
            <input type="hidden" asp-for="Home.Id" />
            <input type="submit" value="Yes, delete it." class="btn btn-danger" />
        </form>
    </div>
</div>
